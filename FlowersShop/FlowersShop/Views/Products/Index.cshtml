@model IEnumerable<FlowersShop.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<link href="~/Content/assets/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-12">
        <div class="page-title-box">
            <h4 class="page-title">Products </h4>
            <ol class="breadcrumb p-0 m-0">
                <li>
                    <a href="@Url.Action("Index", "HomeAdmin")">FlowersShop</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Accounts")">Products</a>
                </li>
                <li class="active">
                    List Product
                </li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="clearfix">
                    <div class="pull-left">
                        <h3><img src="~/Content/assets/images/logo_sm.png" alt="" height="24"> List Product </h3>
                    </div>
                </div>
                <hr>

                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="myData" class="table m-t-30">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Quantity)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Photo)
                                        </th>
                                        <th>
                                            Category
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Price)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Quantity)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Photo)
                                        </th>
                                        <th>
                                            Category
                                        </th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quantity)
                                        </td>
                                        <td>
                                            <img src="~/Content/imgs/@Html.DisplayFor(modelItem => item.Photo)" width="150" height="auto" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category.Name)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                                            <a href="@Url.Action("Buy", "ShoppingCart", new {id = item.Id})">Buy</a>
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
<script src="~/Content/assets/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $('#myData').DataTable();
</script>